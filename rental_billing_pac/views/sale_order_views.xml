<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--Sale Order form-->
    <record id="view_order_inherit_form_inherit_rental_billing_pac" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.rental.billing.pac</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_shipping_id']" position="after">
                <field name="partner_job_site_id"
                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
            </xpath>
            <xpath expr="//button[@name='action_view_delivery']" position="after">
                <button type="object"
                        name="action_view_returns"
                        class="oe_stat_button"
                        icon="fa-undo"
                        attrs="{'invisible': [('return_count', '=', 0)]}"
                        groups="base.group_user">
                    <field name="return_count" widget="statinfo" string="Returns"/>
                </button>
            </xpath>
        </field>
    </record>

    <!--Rental Sale Order form-->
    <record id="view_rental_order_form_view_inherit_rental_billing_pac" model="ir.ui.view">
        <field name="name">view.rental.order.form.view.inherit.rental.billing.pac</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_renting.rental_order_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='open_return']" position="replace">
                <button name="open_rental_return" type="object" class="btn-secondary"
                        attrs="{'invisible': [('delivery_count', '=', 0)]}" string="Rental Return"/>
            </xpath>
            <xpath expr="//button[@name='open_pickup']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>
