<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- RENTAL Return ORDER LINES : Rental RETURN WIZARD -->
    <record id="return_rental_order_wizard_view_form" model="ir.ui.view">
        <field name="name">return.rental.order.wizard.form</field>
        <field name="model">return.rental.order.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="order_id" invisible="1"/>
                    <field name="return_rental_wizard_line_ids">
                        <tree create="false" editable="top">
                            <field name="product_id" readonly="1" force_save="1" options="{'no_open': True}"/>
                            <field name="order_line_id" invisible="1"/>
                            <field name="return_rental_order_wizard_id" invisible="1"/>
                            <field name="qty_picked_up" readonly="1" force_save="1" options="{'no_open': True}"/>
                            <field name="already_qty_returned" readonly="1" force_save="1" options="{'no_open': True}"/>
                            <field name="qty_returned"/>
                        </tree>
                    </field>
                    <footer>
                        <button name="return_rental_products" string="Return Products" type="object"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
