<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!--    Inherited view-->
    <record id="view_sale_advance_payment_inv_inherit_rental_billing_pac" model="ir.ui.view">
        <field name="name">view.sale.advance.payment.inv.inherit.rental.billing.pac</field>
        <field name="model">sale.advance.payment.inv</field>
        <field name="inherit_id" ref="sale.view_sale_advance_payment_inv"/>
        <field name="arch" type="xml">
            <field name="deposit_taxes_id" position="after">
                <field name="invoice_to" class="oe_inline"
                       attrs="{'invisible': [('advance_payment_method', '!=', 'rental_invoice')], 'required': [('advance_payment_method', '=', 'rental_invoice')]}"/>
            </field>
            <xpath expr="//field[@name='advance_payment_method']" position="attributes">
                <attribute name="attrs">
                    {'invisible': False}
                </attribute>
            </xpath>
        </field>
    </record>

</odoo>
